<div class="max-w-screen-lg mx-auto flex flex-col gap-8">
  <section id="about" class="flex flex-col gap-4 py-4">
    <h2 class="font-bold text-5xl text-center">Hey, welcome! The name's Sui.</h2>
    <p class="text-center text-xl tracking-wide font-light">Web developer, gamer and music enjoyer in the free time.</p>

    <img src="/images/hero-image.webp" alt="person looking out through window"
      class="w-full mx-auto rounded-lg shadow-2xl mt-12">
  </section>

  <section id="posts" class="py-12 flex flex-col gap-8">
    <header>
      <h3 class="text-5xl font-light">Latests Posts</h3>
    </header>

    <main>
      <ul class="group/list flex flex-col gap-6">
        <% locals.posts.map((post, index)=> { %>
          <li class="grid grid-cols-12 group rounded-md py-2 justify-between min-h-[200px]">
            <div class="flex flex-col col-span-7">
              <a href="/post/<%= post._id %>" class="capitalize font-medium text-2xl line-clamp-2">
                <%= post.title %>
              </a>
              <a href="/post/<%= post._id %>" class="line-clamp-2 mt-1">
                <%= post.body %>
              </a>
              <span class="text-neutral-950 text-sm font-light mt-auto">
                <%= post.createdAt.toDateString() %>
              </span>
            </div>

            <div class="col-span-1"></div>

            <a href="/post/<%= post._id %>" class="col-span-4 bg-neutral-950/30 rounded-md bg-cover bg-no-repeat"
              style="background-image: url('https://source.unsplash.com/random/<%= 1280+index %>x<%= 720+index %>');">
              <span class="sr-only">Dummy Image</span>
            </a>
          </li>

          <% if (index !==locals.posts.length - 1) { %>
            <div class="w-full border-b border-neutral-950/20"></div>
            <% } %>
              <% }) %>
      </ul>
    </main>

    <footer>
      <% if (locals.hasNextPage) { %>
        <a href="/?page=<%= nextPage %>" class="text-sm hover:underline">&lt; View Older Posts</a>
        <% } %>
    </footer>
  </section>
</div>