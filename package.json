{
  "name": "express-blog",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run rm:public && cross-env ts-node-dev --files --respawn --inspect -r tsconfig-paths/register ./src",
    "start": "pnpm run rm:public && cross-env NODE_ENV=production ts-node --files -r tsconfig-paths/register ./src",
    "build": "pnpm run rm:public && cross-env NODE_ENV=production tsc && tsc-alias && pnpm run copy:files",
    "rm:public": "pnpm run copy:files && RD /S /Q .\\public\\",
    "copy:files": "xcopy .env .\\public\\ /H/Y",
    "tailwind:css": "postcss ./src/storage/public/stylesheets/tailwind.css -o ./src/storage/public/stylesheets/style.css",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.0",
    "http-errors": "~1.6.3",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.3.2",
    "morgan": "~1.9.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "unique-username-generator": "^1.3.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/validator": "^13.11.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}